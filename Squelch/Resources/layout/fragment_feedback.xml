<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:id="@+id/fragment_feedback_root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <!-- Steps -->
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:padding="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">
                <!-- How often do you use the product? -->
                <LinearLayout
                    android:id="@+id/fragment_feedback_question_0_layout"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragment_feedback_question_0_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingBottom="25dp"
                        android:text="@string/fragment_feedback_question_0"/>
                    <Button
                        android:id="@+id/fragment_feedback_question_0_response_0"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/White"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:text="@string/text_once_a_day"/>
                    <Button
                        android:id="@+id/fragment_feedback_question_0_response_1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/White"
                        android:layout_margin="10dp"
                        android:text="@string/text_once_a_week"/>
                    <Button
                        android:id="@+id/fragment_feedback_question_0_response_2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/White"
                        android:layout_margin="10dp"
                        android:text="@string/text_once_a_month"/>
                    <Button
                        android:id="@+id/fragment_feedback_question_0_response_3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/White"
                        android:layout_margin="10dp"
                        android:text="@string/text_once_a_year"/>
                    <Button
                        android:id="@+id/fragment_feedback_question_0_response_4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/White"
                        android:layout_margin="10dp"
                        android:text="@string/text_i_dont_really_use_it"/>
                    <TextView
                        android:id="@+id/fragment_feedback_question_0_answer"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:text=""/>
                </LinearLayout>

                <!-- Does the product help you achieve your goals? -->
                <LinearLayout
                    android:id="@+id/fragment_feedback_question_1_layout"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragment_feedback_question_1_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingBottom="25dp"
                        android:text="@string/fragment_feedback_question_1"/>
                    <Button
                        android:id="@+id/fragment_feedback_question_1_response_0"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/White"
                        android:layout_margin="10dp"
                        android:text="@string/text_yes"/>
                    <Button
                        android:id="@+id/fragment_feedback_question_1_response_1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/White"
                        android:layout_margin="10dp"
                        android:text="@string/text_partially"/>
                    <Button
                        android:id="@+id/fragment_feedback_question_1_response_2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/White"
                        android:layout_margin="10dp"
                        android:text="@string/text_no"/>
                    <TextView
                        android:id="@+id/fragment_feedback_question_1_answer"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:text=""/>
                </LinearLayout>

                <!-- Descriptive satifactory scale? -->
                <LinearLayout
                    android:id="@+id/fragment_feedback_question_2_layout"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragment_feedback_question_2_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingBottom="25dp"
                        android:text="@string/fragment_feedback_question_2"/>
                    <Button
                        android:id="@+id/fragment_feedback_question_2_response_0"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/buttonGeneralBackground"
                        android:textColor="@color/buttonGeneralForeground"
                        android:layout_margin="10dp"
                        android:text="@string/text_very_satisfied"/>
                    <Button
                        android:id="@+id/fragment_feedback_question_2_response_1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/buttonGeneralBackground"
                        android:textColor="@color/buttonGeneralForeground"
                        android:layout_margin="10dp"
                        android:text="@string/text_somewhat_satisfied"/>
                    <Button
                        android:id="@+id/fragment_feedback_question_2_response_2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/buttonGeneralBackground"
                        android:textColor="@color/buttonGeneralForeground"
                        android:layout_margin="10dp"
                        android:text="@string/text_neutral"/>
                    <Button
                        android:id="@+id/fragment_feedback_question_2_response_3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/buttonGeneralBackground"
                        android:textColor="@color/buttonGeneralForeground"
                        android:layout_margin="10dp"
                        android:text="@string/text_somewhat_dissatisfied"/>
                    <Button
                        android:id="@+id/fragment_feedback_question_2_response_4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/buttonGeneralBackground"
                        android:textColor="@color/buttonGeneralForeground"
                        android:layout_margin="10dp"
                        android:text="@string/text_very_dissatisfied"/>
                    <TextView
                        android:id="@+id/fragment_feedback_question_2_answer"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:text=""/>
                </LinearLayout>

                <!-- What would you improve if you could? -->
                <LinearLayout
                    android:id="@+id/fragment_feedback_question_3_layout"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragment_feedback_question_3_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingBottom="25dp"
                        android:text="@string/fragment_feedback_question_3"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:counterEnabled="true"
                        app:counterMaxLength="500">
                        <EditText
                            android:id="@+id/fragment_feedback_question_3_response_0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="500"
                            android:inputType="textMultiLine"
                            android:imeOptions="actionNext"/>
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/fragment_feedback_question_3_answer"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:text=""/>
                </LinearLayout>

                <!-- Do you have any additional comments or feedback for us? -->
                <LinearLayout
                    android:id="@+id/fragment_feedback_question_4_layout"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragment_feedback_question_4_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingBottom="25dp"
                        android:text="@string/fragment_feedback_question_4"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:counterEnabled="true"
                        app:counterMaxLength="500">
                        <EditText
                            android:id="@+id/fragment_feedback_question_4_response_0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="500"
                            android:inputType="textMultiLine"
                            android:imeOptions="actionNext"/>
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/fragment_feedback_question_4_answer"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:text=""/>
                </LinearLayout>

                <!-- May we contact you regarding your respones? -->
                <LinearLayout
                    android:id="@+id/fragment_feedback_question_5_layout"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/fragment_feedback_question_5_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingBottom="25dp"
                        android:text="@string/fragment_feedback_question_5"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:counterEnabled="true"
                        app:counterMaxLength="100">
                        <EditText
                            android:id="@+id/fragment_feedback_question_5_response_0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="100"
                            android:inputType="textMultiLine"
                            android:imeOptions="actionNext"/>
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/fragment_feedback_question_5_answer"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <!-- Action Buttons -->
    <RelativeLayout
        android:id="@+id/fragment_feedback_action_button_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/fragment_feedback_data_consent_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textAlignment="center"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="@string/consent_statement" />
            <TextView
                android:id="@+id/fragment_feedback_problem_label"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textColor="@color/Red"
                android:textStyle="bold"
                android:text="@string/text_error"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/fragment_feedback_button_negative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_back"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_corners_ripple"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/buttonNegativeBackground"
                    android:textColor="@color/buttonNegativeForeground"
                    android:clickable="true" />
                <Button
                    android:id="@+id/fragment_feedback_button_positive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_next"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_corners_ripple"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/buttonPositiveBackground"
                    android:textColor="@color/buttonPositiveForeground"
                    android:clickable="true" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
