<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/White">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_blackout_details"
        android:textSize="@dimen/abc_text_size_title_material"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryForeground"
        android:padding="10dp"
        android:background="@color/colorPrimary"/>
    <TableLayout
        android:id="@+id/dialog_blackout_details_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"
        android:padding="10dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_col_blackout_start_date"
                android:padding="10dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/dialog_blackout_details_data_layout_start_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_start_date"
                android:padding="10dp"
                android:layout_gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_col_blackout_end_date"
                android:padding="10dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/dialog_blackout_details_data_layout_end_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_end_date"
                android:padding="10dp"
                android:layout_gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_col_blackout_bid"
                android:padding="10dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/dialog_blackout_details_data_layout_bid_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_bid"
                android:padding="10dp"
                android:layout_gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_col_blackout_difficulty"
                android:padding="10dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/dialog_blackout_details_data_layout_difficulty_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_difficulty"
                android:padding="10dp"
                android:layout_gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_col_blackout_status"
                android:padding="10dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/dialog_blackout_details_data_layout_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_status"
                android:padding="10dp"
                android:layout_gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_col_blackout_result"
                android:padding="10dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/dialog_blackout_details_data_layout_result_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_result"
                android:padding="10dp"
                android:layout_gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_col_blackout_blacklist"
                android:padding="10dp"
                android:layout_gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dialog_blackout_details_data_layout_blacklist_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_blacklist"
                android:padding="10dp"
                android:layout_span="2"
                android:layout_gravity="center"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/dialog_blackout_details_negative_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_cancel"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_corners_ripple"
            android:layout_margin="10dp"
            android:backgroundTint="@color/buttonNegativeBackground"
            android:textColor="@color/buttonNegativeForeground"
            android:visibility="visible"
            android:clickable="true" />
        <Button
            android:id="@+id/dialog_blackout_details_positive_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_ok"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_corners_ripple"
            android:layout_margin="10dp"
            android:backgroundTint="@color/buttonPositiveBackground"
            android:textColor="@color/buttonPositiveForeground"
            android:visibility="visible"
            android:clickable="true" />
    </LinearLayout>
</LinearLayout>
