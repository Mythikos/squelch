<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_settings_root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/fragment_settings_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Setting: User: Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/label_user"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/colorAccent"
                android:textStyle="bold"
                android:textColor="@color/White"/>

            <!-- Setting: User: Id -->
            <LinearLayout
                android:id="@+id/fragment_settings_user_id_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:text="@string/label_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingBottom="3dp"/>
                <TextView
                    android:id="@+id/fragment_settings_user_id_content_label"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Setting: User: First Name -->
            <LinearLayout
                android:id="@+id/fragment_settings_user_first_name_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:text="@string/label_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingBottom="3dp"/>
                <TextView
                    android:id="@+id/fragment_settings_user_first_name_content_label"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Setting: User: Last Name -->
            <LinearLayout
                android:id="@+id/fragment_settings_user_last_name_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:text="@string/label_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingBottom="3dp"/>
                <TextView
                    android:id="@+id/fragment_settings_user_last_name_content_label"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_height="20dp"
                android:layout_width="match_parent"/>

            <!-- Setting: Permissions: Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/label_permissions"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/colorAccent"
                android:textStyle="bold"
                android:textColor="@color/White"/>

            <!-- Setting: Permissions: Usage Stats -->
            <LinearLayout
                android:id="@+id/fragment_settings_permissions_usage_stats_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:text="@string/permission_usage_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingBottom="3dp"/>
                <TextView
                    android:id="@+id/fragment_settings_permissions_usage_stats_state_label"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Setting: Permissions: Application Overlay -->
            <LinearLayout
                android:id="@+id/fragment_settings_permissions_application_overlay_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:text="@string/permission_application_overlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingBottom="3dp"/>
                <TextView
                    android:id="@+id/fragment_settings_permissions_application_overlay_state_label"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_height="20dp"
                android:layout_width="match_parent"/>

            <!-- Setting: About: Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/label_about"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/colorAccent"
                android:textStyle="bold"
                android:textColor="@color/White"/>

            <!-- Setting: About: Squelch Version -->
            <LinearLayout
                android:id="@+id/fragment_settings_about_version_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:text="@string/label_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingBottom="3dp"/>
                <TextView
                    android:id="@+id/fragment_settings_about_version_content_label"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Setting: About: Privacy Policy -->
            <LinearLayout
                android:id="@+id/fragment_settings_about_privacy_policy_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:text="@string/label_privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingBottom="3dp"/>
                <TextView
                    android:id="@+id/fragment_settings_about_privacy_policy_content_label"
                    android:text="@string/fragment_settings_privacy_policy_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Setting: About: EULA -->
            <LinearLayout
                android:id="@+id/fragment_settings_about_eula_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:text="@string/label_end_user_licensing_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingBottom="3dp"/>
                <TextView
                    android:id="@+id/fragment_settings_about_eula_content_label"
                    android:text="@string/fragment_settings_end_user_licensing_agreement_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Setting: About: Open Source -->
            <LinearLayout
                android:id="@+id/fragment_settings_about_open_source_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:text="@string/label_open_source_software"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingBottom="3dp"/>
                <TextView
                    android:id="@+id/fragment_settings_about_open_source_content_label"
                    android:text="@string/fragment_settings_open_source_software_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_height="20dp"
                android:layout_width="match_parent"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
