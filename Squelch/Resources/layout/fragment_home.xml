
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_home_root_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:visibility="visible">
    <ScrollView
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:gravity="center_horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Hello"
                android:textSize="25dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textColor="@color/White"
                android:id="@+id/fragment_home_greeting_label"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/fragment_home_setup_blackout_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_corners_ripple"
                    android:backgroundTint="@color/buttonPositiveBackground"
                    android:clickable="true"
                    android:focusable="auto"
                    android:text="@string/action_setup_blackout"
                    android:textColor="@color/buttonPositiveForeground" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_home_donation_card"
                android:animateLayoutChanges="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:backgroundTint="@color/Goldenrod"
                android:visibility="visible">
                <LinearLayout
                    android:id="@+id/fragment_home_donation_card_inquiry"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/fragment_home_donation_card_inquiry_message"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/fragment_home_donation_message_neutral"
                        android:textColor="@color/White"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:paddingBottom="5dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <Button
                            android:id="@+id/fragment_home_donation_card_inquiry_negative_button"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/buttonNegativeBackground"
                            android:textColor="@color/buttonNegativeForeground"
                            android:text="@string/text_never"/>
                        <Button
                            android:id="@+id/fragment_home_donation_card_inquiry_neutral_button"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/buttonNegativeBackground"
                            android:textColor="@color/buttonNegativeForeground"
                            android:text="@string/text_maybe_later"/>
                        <Button
                            android:id="@+id/fragment_home_donation_card_inquiry_positive_button"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/buttonPositiveBackground"
                            android:textColor="@color/buttonPositiveForeground"
                            android:text="@string/text_sure_exclamation"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_home_feedback_card"
                android:animateLayoutChanges="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:backgroundTint="@color/colorAccent"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/fragment_home_feedback_card_inquiry"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/fragment_home_feedback_card_inquiry_message"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="_message"
                        android:textColor="@color/White"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:paddingBottom="5dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <Button
                            android:id="@+id/fragment_home_feedback_card_inquiry_negative_button"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/buttonNegativeBackground"
                            android:textColor="@color/buttonNegativeForeground"
                            android:text="@string/text_not_really"/>
                        <Button
                            android:id="@+id/fragment_home_feedback_card_inquiry_positive_button"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/buttonPositiveBackground"
                            android:textColor="@color/buttonPositiveForeground"
                            android:text="@string/text_yes"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_home_next_blackout_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:clickable="true"
                android:background="@drawable/rounded_corners_ripple"
                android:backgroundTint="@color/colorPrimary"
                android:layout_margin="10dp"
                android:visibility="visible">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:contentDescription="@string/content_description_clock_icon"
                        android:src="@drawable/ic_access_time"
                        android:tint="@color/colorPrimaryForeground"/>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingLeft="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/text_next_blackout"
                            android:textColor="@color/colorPrimaryForeground"
                            android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/fragment_home_next_blackout_card_start_date_label"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Start Date: n/a"
                            android:textColor="@color/colorPrimaryForeground"
                            android:textSize="12dp"/>
                        <TextView
                            android:id="@+id/fragment_home_next_blackout_card_difficulty_label"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Difficulty: n/a"
                            android:textColor="@color/colorPrimaryForeground"
                            android:textSize="12dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/fragment_home_stats_layout"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/colorPrimary"
                android:backgroundTintMode="src_in">
                <TextView
                    android:id="@+id/fragment_home_stats_layout_activity_title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Last 7 days"
                    android:textColor="@color/White"
                    android:paddingBottom="5dp"/>
                <View
                    android:id="@+id/fragment_home_stats_layout_activity_chart"
                    android:background="@drawable/rounded_corners"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:paddingBottom="5dp"/>
                <TextView
                    android:id="@+id/fragment_home_stats_layout_hours_saved_title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:layout_gravity="center"
                    android:textColor="@color/White"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>