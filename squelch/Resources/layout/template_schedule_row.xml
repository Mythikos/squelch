<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/template_schedule_row_root_layout"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_ripple"
    android:backgroundTint="@color/colorAccent"
    android:layout_gravity="center_horizontal"
    android:padding="10dp">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/template_schedule_row_hours_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="hours" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/template_schedule_row_range_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/template_schedule_row_hours_label"
        android:gravity="top|center"
        android:background="@android:color/transparent"
        android:textSize="12dp"
        android:textColor="@color/White"
        android:text="date to date" />
</androidx.constraintlayout.widget.ConstraintLayout>