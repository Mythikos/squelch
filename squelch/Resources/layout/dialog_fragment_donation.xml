<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_donation_root_layout">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We "
            android:textColor="@color/White"
            android:textSize="20dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:src="@drawable/ic_heart"
            android:tint="@color/Red" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:text=" You"
            android:textSize="20dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/White"
        android:padding="10dp"
        android:text="@string/fragment_donation_title_sub"/>
    <ScrollView
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">
            <RadioGroup
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/fragment_donation_button_preset_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners_ripple"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/colorAccentForeground"
                    android:buttonTint="@color/colorAccentForeground"
                    android:layout_margin="10dp"
                    android:text="$5"/>
                <RadioButton
                    android:id="@+id/fragment_donation_button_preset_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners_ripple"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/colorAccentForeground"
                    android:buttonTint="@color/colorAccentForeground"
                    android:layout_margin="10dp"
                    android:text="$10"/>
                <RadioButton
                    android:id="@+id/fragment_donation_button_preset_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners_ripple"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/colorAccentForeground"
                    android:buttonTint="@color/colorAccentForeground"
                    android:layout_margin="10dp"
                    android:text="$20"/>
                <RadioButton
                    android:id="@+id/fragment_donation_button_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners_ripple"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/colorAccentForeground"
                    android:buttonTint="@color/colorAccentForeground"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/text_other"/>
            </RadioGroup>
            <androidx.core.widget.NestedScrollView
                android:id="@+id/fragment_donation_other_picker_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_corners_bottom"
                android:backgroundTint="@color/colorAccent"
                android:visibility="gone"
                android:overScrollMode="never">
                <NumberPicker
                    android:id="@+id/fragment_donation_other_number_picker"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:theme="@style/NumberPickerAccentStyle"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center" />
            </androidx.core.widget.NestedScrollView>
            <View
                android:layout_height="20dp"
                android:layout_width="match_parent"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center">
		<Button
			android:id="@+id/fragment_donation_negative_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/action_cancel"
			android:layout_weight="0.5"
            android:background="@drawable/rounded_corners_ripple"
            android:layout_margin="10dp"
			android:backgroundTint="@color/buttonNegativeBackground"
			android:textColor="@color/buttonNegativeForeground"
			android:clickable="true" />
		<Button
			android:id="@+id/fragment_donation_positive_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/action_submit"
			android:layout_weight="0.5"
            android:background="@drawable/rounded_corners_ripple"
            android:layout_margin="10dp"
			android:backgroundTint="@color/buttonPositiveBackground"
			android:textColor="@color/buttonPositiveForeground"
            android:visibility="gone"
			android:clickable="true" />
	</LinearLayout>
</LinearLayout>