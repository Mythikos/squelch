
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_blackout_setup_root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <TextView
        android:id="@+id/fragment_blackout_setup_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="title"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:layout_weight="0"
        android:textSize="20dp">
    </TextView>

    <!-- Config Steps -->
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="10">
        <ScrollView
            android:id="@+id/fragment_blackout_setup_difficulty_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/colorPrimary">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:text="@string/fragment_blackout_setup_novice_difficulty_description"/>
                    <Button
                        android:id="@+id/fragment_blackout_setup_difficulty_novice_button"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_margin="12dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/White"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/text_novice"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/colorPrimary">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:text="@string/fragment_blackout_setup_veteran_difficulty_description"/>
                    <Button
                        android:id="@+id/fragment_blackout_setup_difficulty_veteran_button"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_margin="12dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/White"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/text_veteran"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/colorPrimary">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:text="@string/fragment_blackout_setup_master_difficulty_description"/>
                    <Button
                        android:id="@+id/fragment_blackout_setup_difficulty_master_button"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_margin="12dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/White"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/text_master"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/fragment_blackout_setup_bid_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/colorPrimary">
                    <TextView
                        android:id="@+id/fragment_blackout_setup_bid_valid_values_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:layout_margin="12dp"
                        android:text="@string/fragment_blackout_setup_bid_range"/>
                    <NumberPicker
                        android:id="@+id/fragment_blackout_setup_bid_number_picker"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_margin="12dp"
                        android:background="@drawable/rounded_corners"
                        android:backgroundTint="@color/White"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ScrollView
            android:id="@+id/fragment_blackout_setup_date_range_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/colorPrimary">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:text="@string/fragment_blackout_setup_dates_start_date_time"/>
                    <Button
                        android:id="@+id/fragment_blackout_setup_date_range_start_date_button"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_margin="12dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/White"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/fragment_blackout_setup_dates_tap_to_set_date"/>
                    <Button
                        android:id="@+id/fragment_blackout_setup_date_range_start_time_button"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_margin="12dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/White"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/fragment_blackout_setup_dates_tap_to_set_time"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal">
                        <Button
                            android:id="@+id/fragment_blackout_setup_date_range_start_now_button"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="@string/fragment_blackout_setup_dates_now"
                            android:textSize="10dp"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/colorAccent"
                            android:textColor="@color/White"/>
                        <Button
                            android:id="@+id/fragment_blackout_setup_date_range_start_plus1_button"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="@string/fragment_blackout_setup_dates_plus_1_minute"
                            android:textSize="10dp"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/colorAccent"
                            android:textColor="@color/White"/>
                        <Button
                            android:id="@+id/fragment_blackout_setup_date_range_start_plus5_button"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="@string/fragment_blackout_setup_dates_plus_5_minutes"
                            android:textSize="10dp"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/colorAccent"
                            android:textColor="@color/White"/>
                        <Button
                            android:id="@+id/fragment_blackout_setup_date_range_start_plus10_button"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="@string/fragment_blackout_setup_dates_plus_10_minutes"
                            android:textSize="10dp"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/colorAccent"
                            android:textColor="@color/White"/>
                        <Button
                            android:id="@+id/fragment_blackout_setup_date_range_start_plus30_button"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="@string/fragment_blackout_setup_dates_plus_30_minutes"
                            android:textSize="10dp"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/colorAccent"
                            android:textColor="@color/White"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/colorPrimary">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:text="@string/fragment_blackout_setup_dates_end_date_time"/>
                    <Button
                        android:id="@+id/fragment_blackout_setup_date_range_end_date_button"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_margin="12dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/White"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/fragment_blackout_setup_dates_tap_to_set_date"/>
                    <Button
                        android:id="@+id/fragment_blackout_setup_date_range_end_time_button"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_margin="12dp"
                        android:background="@drawable/rounded_corners_ripple"
                        android:backgroundTint="@color/White"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/fragment_blackout_setup_dates_tap_to_set_time"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:gravity="center_horizontal">
                        <Button
                            android:id="@+id/fragment_blackout_setup_date_range_end_plus1_button"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="@string/fragment_blackout_setup_dates_plus_1_minute"
                            android:textSize="10dp"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/colorAccent"
                            android:textColor="@color/White"/>
                        <Button
                            android:id="@+id/fragment_blackout_setup_date_range_end_plus5_button"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="@string/fragment_blackout_setup_dates_plus_5_minutes"
                            android:textSize="10dp"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/colorAccent"
                            android:textColor="@color/White"/>
                        <Button
                            android:id="@+id/fragment_blackout_setup_date_range_end_plus10_button"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="@string/fragment_blackout_setup_dates_plus_10_minutes"
                            android:textSize="10dp"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/colorAccent"
                            android:textColor="@color/White"/>
                        <Button
                            android:id="@+id/fragment_blackout_setup_date_range_end_plus30_button"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="@string/fragment_blackout_setup_dates_plus_30_minutes"
                            android:textSize="10dp"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/rounded_corners_ripple"
                            android:backgroundTint="@color/colorAccent"
                            android:textColor="@color/White"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/fragment_blackout_setup_application_layout"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:id="@+id/fragment_blackout_setup_application_recycler_view">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <ScrollView
            android:id="@+id/fragment_blackout_setup_review_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1"
                android:padding="10dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_col_blackout_start_date"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/fragment_blackout_setup_review_start_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_start_date"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:layout_gravity="center"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_col_blackout_end_date"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/fragment_blackout_setup_review_end_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_end_date"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:layout_gravity="center"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_col_blackout_bid"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/fragment_blackout_setup_review_bid_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_bid"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:layout_gravity="center"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_col_blackout_difficulty"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/fragment_blackout_setup_review_difficulty_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_difficulty"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:layout_gravity="center"/>
                </TableRow>
                 <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_col_blackout_blacklist"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                    <TextView
                        android:minWidth="30dp"
                        android:minHeight="30dp"
                        android:id="@+id/textView1" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragment_blackout_setup_review_blacklist_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_blacklist"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:layout_span="2"
                        android:layout_gravity="center"/>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </RelativeLayout>

    <!-- Action Buttons -->
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textColor="@color/Red"
                android:textStyle="bold"
                android:text="Error Text"
                android:id="@+id/fragment_blackout_setup_problem_label"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/fragment_blackout_setup_button_negative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="_pos button"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_corners_ripple"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/buttonNegativeBackground"
                    android:textColor="@color/buttonNegativeForeground"
                    android:clickable="true" />
                <Button
                    android:id="@+id/fragment_blackout_setup_button_positive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="_pos button"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_corners_ripple"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/buttonPositiveBackground"
                    android:textColor="@color/buttonPositiveForeground"
                    android:clickable="true" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>